{
  "title": "Synthetic Journey Monitoring - Full Run (Clean)",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 10,
  "refresh": "10s",
  "templating": {
    "list": [
      {
        "name": "env",
        "type": "query",
        "datasource": "Prometheus",
        "query": "label_values(synthetic_step_duration_s, env)"
      },
      {
        "name": "run_id",
        "type": "query",
        "datasource": "Prometheus",
        "query": "label_values(synthetic_step_duration_s, run_id)"
      }
    ]
  },
  "panels": [
    {
      "type": "stat",
      "title": "Overall Step P90 (Full Run)",
      "targets": [
        {
          "expr": "max(quantile_over_time(0.9, synthetic_step_duration_s{env=\"$env\",run_id=\"$run_id\"}[$__range]))"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      },
      "gridPos": {
        "h": 5,
        "w": 6,
        "x": 0,
        "y": 0
      }
    },
    {
      "type": "stat",
      "title": "Overall Step AVG (Full Run)",
      "targets": [
        {
          "expr": "avg(avg_over_time(synthetic_step_duration_s{env=\"$env\",run_id=\"$run_id\"}[$__range]))"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      },
      "gridPos": {
        "h": 5,
        "w": 6,
        "x": 6,
        "y": 0
      }
    },
    {
      "type": "stat",
      "title": "Total Journey Success",
      "targets": [
        {
          "expr": "sum(increase(synthetic_journey_success_total{env=\"$env\",run_id=\"$run_id\"}[$__range]))"
        }
      ],
      "gridPos": {
        "h": 5,
        "w": 6,
        "x": 12,
        "y": 0
      }
    },
    {
      "type": "stat",
      "title": "Total Journey Failure",
      "targets": [
        {
          "expr": "sum(increase(synthetic_journey_failure_total{env=\"$env\",run_id=\"$run_id\"}[$__range]))"
        }
      ],
      "gridPos": {
        "h": 5,
        "w": 6,
        "x": 18,
        "y": 0
      }
    },
    {
      "type": "timeseries",
      "title": "Step Duration (Raw per Step)",
      "targets": [
        {
          "expr": "last_over_time((synthetic_step_duration_s{env=\"$env\",run_id=\"$run_id\"} AND on(env,run_id) (time() - synthetic_run_last_push_timestamp{env=\"$env\",run_id=\"$run_id\"} < $__range_s))[$__interval])",
          "legendFormat": "{{journey}} - {{step}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 5
      }
    },
    {
      "type": "timeseries",
      "title": "Step P90 (Full Run)",
      "targets": [
        {
          "expr": "quantile_over_time(0.9, synthetic_step_duration_s{env=\"$env\",run_id=\"$run_id\"}[$__range])",
          "legendFormat": "{{journey}} - {{step}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 13
      }
    },
    {
      "type": "timeseries",
      "title": "Step AVG (Full Run)",
      "targets": [
        {
          "expr": "avg_over_time(synthetic_step_duration_s{env=\"$env\",run_id=\"$run_id\"}[$__range])",
          "legendFormat": "{{journey}} - {{step}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 21
      }
    },
    {
      "type": "timeseries",
      "title": "Step FCP & LCP Trend",
      "targets": [
        {
          "expr": "last_over_time((synthetic_step_fcp_s{env=\"$env\",run_id=\"$run_id\"} AND on(env,run_id) (time() - synthetic_run_last_push_timestamp{env=\"$env\",run_id=\"$run_id\"} < $__range_s))[$__interval])",
          "legendFormat": "FCP - {{step}}"
        },
        {
          "expr": "last_over_time((synthetic_step_lcp_s{env=\"$env\",run_id=\"$run_id\"} AND on(env,run_id) (time() - synthetic_run_last_push_timestamp{env=\"$env\",run_id=\"$run_id\"} < $__range_s))[$__interval])",
          "legendFormat": "LCP - {{step}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 29
      }
    },
    {
      "type": "timeseries",
      "title": "Step CLS Trend",
      "targets": [
        {
          "expr": "last_over_time((synthetic_step_cls{env=\"$env\",run_id=\"$run_id\"} AND on(env,run_id) (time() - synthetic_run_last_push_timestamp{env=\"$env\",run_id=\"$run_id\"} < $__range_s))[$__interval])",
          "legendFormat": "{{journey}} - {{step}}"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 37
      }
    }
  ]
}