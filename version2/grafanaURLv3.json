{
  "title": "Synthetic URL Monitoring - Executive Clean",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 2,
  "refresh": "10s",
  "templating": {
    "list": [
      {
        "name": "env",
        "type": "query",
        "datasource": "Prometheus",
        "query": "label_values(synthetic_url_duration_s, env)"
      },
      {
        "name": "run_id",
        "type": "query",
        "datasource": "Prometheus",
        "query": "label_values(synthetic_url_duration_s, run_id)"
      }
    ]
  },
  "panels": [

    {
      "type": "stat",
      "title": "Overall P90 (Worst URL - 5m)",
      "targets": [
        {
          "expr": "max(quantile_over_time(0.9, synthetic_url_duration_s{env=\"$env\", run_id=\"$run_id\"}[5m]))"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "orange", "value": 1.5 },
              { "color": "red", "value": 2 }
            ]
          }
        }
      },
      "gridPos": { "h": 5, "w": 6, "x": 0, "y": 0 }
    },

    {
      "type": "stat",
      "title": "Overall AVG (5m)",
      "targets": [
        {
          "expr": "avg(avg_over_time(synthetic_url_duration_s{env=\"$env\", run_id=\"$run_id\"}[5m]))"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "s" }},
      "gridPos": { "h": 5, "w": 6, "x": 6, "y": 0 }
    },

    {
      "type": "stat",
      "title": "Success (5m)",
      "targets": [
        {
          "expr": "sum(increase(synthetic_url_success_total{env=\"$env\", run_id=\"$run_id\"}[5m]))"
        }
      ],
      "gridPos": { "h": 5, "w": 6, "x": 12, "y": 0 }
    },

    {
      "type": "stat",
      "title": "Failure (5m)",
      "targets": [
        {
          "expr": "sum(increase(synthetic_url_failure_total{env=\"$env\", run_id=\"$run_id\"}[5m]))"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "red", "value": 1 }
            ]
          }
        }
      },
      "gridPos": { "h": 5, "w": 6, "x": 18, "y": 0 }
    },

    {
      "type": "timeseries",
      "title": "URL Duration (Raw per URL)",
      "targets": [
        {
          "expr": "synthetic_url_duration_s{env=\"$env\", run_id=\"$run_id\"}",
          "legendFormat": "{{scenario}}"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "s" }},
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 5 }
    },

    {
      "type": "timeseries",
      "title": "URL P90 Trend + SLA (2s)",
      "targets": [
        {
          "expr": "quantile_over_time(0.9, synthetic_url_duration_s{env=\"$env\", run_id=\"$run_id\"}[5m])",
          "legendFormat": "{{scenario}}"
        },
        {
          "expr": "2",
          "legendFormat": "SLA 2s"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "s" }},
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 13 }
    },

    {
      "type": "timeseries",
      "title": "URL AVG Trend (5m Rolling)",
      "targets": [
        {
          "expr": "avg_over_time(synthetic_url_duration_s{env=\"$env\", run_id=\"$run_id\"}[5m])",
          "legendFormat": "{{scenario}}"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "s" }},
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 21 }
    },

    {
      "type": "timeseries",
      "title": "FCP & LCP Trend",
      "targets": [
        {
          "expr": "synthetic_url_fcp_s{env=\"$env\", run_id=\"$run_id\"}",
          "legendFormat": "FCP - {{scenario}}"
        },
        {
          "expr": "synthetic_url_lcp_s{env=\"$env\", run_id=\"$run_id\"}",
          "legendFormat": "LCP - {{scenario}}"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "s" }},
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 29 }
    },

    {
      "type": "timeseries",
      "title": "CLS Trend",
      "targets": [
        {
          "expr": "synthetic_url_cls{env=\"$env\", run_id=\"$run_id\"}",
          "legendFormat": "{{scenario}}"
        }
      ],
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 37 }
    }

  ]
}
