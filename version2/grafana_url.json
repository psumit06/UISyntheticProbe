{
  "title": "Synthetic URL Monitoring - Optimized",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "templating": {
    "list": [
      {
        "name": "env",
        "type": "query",
        "datasource": "Prometheus",
        "query": "label_values(synthetic_url_duration_s, env)"
      },
      {
        "name": "run_id",
        "type": "query",
        "datasource": "Prometheus",
        "query": "label_values(synthetic_url_duration_s, run_id)"
      }
    ]
  },
  "panels": [

    {
      "type": "stat",
      "title": "URL P90 (5m)",
      "targets": [
        {
          "expr": "synthetic_url:p90_duration_5m{env=\"$env\", run_id=\"$run_id\"}",
          "legendFormat": "{{scenario}}"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "s" }},
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 }
    },

    {
      "type": "stat",
      "title": "Error Rate % (5m)",
      "targets": [
        {
          "expr": "synthetic_url:error_rate_5m"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "percent" }},
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 }
    },

    {
      "type": "stat",
      "title": "Burn Rate",
      "targets": [
        {
          "expr": "synthetic_url:burn_rate_5m"
        }
      ],
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 0 }
    },

    {
      "type": "timeseries",
      "title": "URL Duration (Raw)",
      "targets": [
        {
          "expr": "synthetic_url_duration_s{env=\"$env\", run_id=\"$run_id\"}",
          "legendFormat": "{{scenario}}"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "s" }},
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 4 }
    },

    {
      "type": "timeseries",
      "title": "URL P90 Trend + SLA (2s)",
      "targets": [
        {
          "expr": "synthetic_url:p90_duration_5m{env=\"$env\", run_id=\"$run_id\"}",
          "legendFormat": "{{scenario}}"
        },
        {
          "expr": "2",
          "legendFormat": "SLA 2s"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "s" }},
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 12 }
    },

    {
      "type": "timeseries",
      "title": "Success vs Failure (Rate)",
      "targets": [
        {
          "expr": "rate(synthetic_url_success_total{env=\"$env\", run_id=\"$run_id\"}[5m])",
          "legendFormat": "Success"
        },
        {
          "expr": "rate(synthetic_url_failure_total{env=\"$env\", run_id=\"$run_id\"}[5m])",
          "legendFormat": "Failure"
        }
      ],
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 20 }
    },

    {
      "type": "timeseries",
      "title": "Top 5 Slowest URLs (P90)",
      "targets": [
        {
          "expr": "topk(5, synthetic_url:p90_duration_5m{env=\"$env\", run_id=\"$run_id\"})",
          "legendFormat": "{{scenario}}"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "s" }},
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 28 }
    }

  ]
}
