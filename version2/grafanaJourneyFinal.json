{
  "title": "Synthetic Journey Monitoring - Full Run Analytics",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 6,
  "refresh": "10s",
  "templating": {
    "list": [
      {
        "name": "env",
        "type": "query",
        "datasource": "Prometheus",
        "query": "label_values(synthetic_journey_duration_s, env)"
      },
      {
        "name": "run_id",
        "type": "query",
        "datasource": "Prometheus",
        "query": "label_values(synthetic_journey_duration_s, run_id)"
      }
    ]
  },
  "panels": [

    {
      "type": "stat",
      "title": "Overall Journey P90 (Full Run)",
      "targets": [
        {
          "expr": "max(quantile_over_time(0.9, synthetic_journey_duration_s{env=\"$env\", run_id=\"$run_id\"}[$__range]))"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "orange", "value": 1.5 },
              { "color": "red", "value": 2 }
            ]
          }
        }
      },
      "gridPos": { "h": 5, "w": 6, "x": 0, "y": 0 }
    },

    {
      "type": "stat",
      "title": "Overall Journey AVG (Full Run)",
      "targets": [
        {
          "expr": "avg(avg_over_time(synthetic_journey_duration_s{env=\"$env\", run_id=\"$run_id\"}[$__range]))"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "s" }},
      "gridPos": { "h": 5, "w": 6, "x": 6, "y": 0 }
    },

    {
      "type": "stat",
      "title": "Total Success (Run)",
      "targets": [
        {
          "expr": "sum(increase(synthetic_journey_success_total{env=\"$env\", run_id=\"$run_id\"}[$__range]))"
        }
      ],
      "gridPos": { "h": 5, "w": 6, "x": 12, "y": 0 }
    },

    {
      "type": "stat",
      "title": "Total Failure (Run)",
      "targets": [
        {
          "expr": "sum(increase(synthetic_journey_failure_total{env=\"$env\", run_id=\"$run_id\"}[$__range]))"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "red", "value": 1 }
            ]
          }
        }
      },
      "gridPos": { "h": 5, "w": 6, "x": 18, "y": 0 }
    },

    {
      "type": "timeseries",
      "title": "Journey Duration (Raw per Journey)",
      "targets": [
        {
          "expr": "synthetic_journey_duration_s{env=\"$env\", run_id=\"$run_id\"}",
          "legendFormat": "{{journey}}"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "s" }},
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 5 }
    },

    {
      "type": "timeseries",
      "title": "Journey P90 (Full Run) + SLA",
      "targets": [
        {
          "expr": "quantile_over_time(0.9, synthetic_journey_duration_s{env=\"$env\", run_id=\"$run_id\"}[$__range])",
          "legendFormat": "{{journey}}"
        },
        {
          "expr": "2",
          "legendFormat": "SLA 2s"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "s" }},
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 13 }
    },

    {
      "type": "timeseries",
      "title": "Step P90 (Full Run)",
      "targets": [
        {
          "expr": "quantile_over_time(0.9, synthetic_step_duration_s{env=\"$env\", run_id=\"$run_id\"}[$__range])",
          "legendFormat": "{{journey}} - {{step}}"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "s" }},
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 21 }
    }

  ]
}
