{
  "title": "Synthetic URL Monitoring - Histogram Edition",
  "timezone": "browser",
  "schemaVersion": 38,
  "refresh": "10s",
  "templating": {
    "list": [
      {
        "name": "env",
        "type": "query",
        "datasource": "Prometheus",
        "query": "label_values(synthetic_url_duration_ms_bucket, env)"
      },
      {
        "name": "run_id",
        "type": "query",
        "datasource": "Prometheus",
        "query": "label_values(synthetic_url_duration_ms_bucket, run_id)"
      }
    ]
  },
  "panels": [
    {
      "type": "stat",
      "title": "Overall P90 (Full Run)",
      "targets": [
        {
          "expr": "max(histogram_quantile(0.9,sum by (le,scenario)(increase(synthetic_url_duration_ms_bucket{env=\"$env\",run_id=\"$run_id\"}[$__range])))/1000)"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      },
      "gridPos": {
        "h": 5,
        "w": 6,
        "x": 0,
        "y": 0
      }
    },
    {
      "type": "stat",
      "title": "Overall AVG (Full Run)",
      "targets": [
        {
          "expr": "(sum(increase(synthetic_url_duration_ms_sum{env=\"$env\",run_id=\"$run_id\"}[$__range]))/sum(increase(synthetic_url_duration_ms_count{env=\"$env\",run_id=\"$run_id\"}[$__range])))/1000"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      },
      "gridPos": {
        "h": 5,
        "w": 6,
        "x": 6,
        "y": 0
      }
    },
    {
      "type": "stat",
      "title": "Total Success (Run)",
      "targets": [
        {
          "expr": "sum(increase(synthetic_url_success_total{env=\"$env\",run_id=\"$run_id\"}[$__range]))"
        }
      ],
      "gridPos": {
        "h": 5,
        "w": 6,
        "x": 12,
        "y": 0
      }
    },
    {
      "type": "stat",
      "title": "Total Failure (Run)",
      "targets": [
        {
          "expr": "sum(increase(synthetic_url_failure_total{env=\"$env\",run_id=\"$run_id\"}[$__range]))"
        }
      ],
      "gridPos": {
        "h": 5,
        "w": 6,
        "x": 18,
        "y": 0
      }
    },
    {
      "type": "timeseries",
      "title": "URL Mean Trend",
      "targets": [
        {
          "expr": "(sum by (scenario)(increase(synthetic_url_duration_ms_sum{env=\"$env\",run_id=\"$run_id\"}[$__interval]))/sum by (scenario)(increase(synthetic_url_duration_ms_count{env=\"$env\",run_id=\"$run_id\"}[$__interval])))/1000",
          "legendFormat": "{{scenario}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 5
      }
    },
    {
      "type": "timeseries",
      "title": "URL P90 (Full Run) + SLA",
      "targets": [
        {
          "expr": "histogram_quantile(0.9,sum by (le,scenario)(increase(synthetic_url_duration_ms_bucket{env=\"$env\",run_id=\"$run_id\"}[$__range])))/1000",
          "legendFormat": "{{scenario}}"
        },
        {
          "expr": "2",
          "legendFormat": "SLA 2s"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 13
      }
    },
    {
      "type": "timeseries",
      "title": "Top 5 Slowest URLs",
      "targets": [
        {
          "expr": "topk(5,histogram_quantile(0.9,sum by (le,scenario)(increase(synthetic_url_duration_ms_bucket{env=\"$env\",run_id=\"$run_id\"}[$__range])))/1000)",
          "legendFormat": "{{scenario}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 21
      }
    },
    {
      "type": "timeseries",
      "title": "FCP & LCP Trend",
      "targets": [
        {
          "expr": "(sum by (scenario)(increase(synthetic_url_fcp_ms_sum{env=\"$env\",run_id=\"$run_id\"}[$__interval]))/sum by (scenario)(increase(synthetic_url_fcp_ms_count{env=\"$env\",run_id=\"$run_id\"}[$__interval])))/1000",
          "legendFormat": "FCP {{scenario}}"
        },
        {
          "expr": "(sum by (scenario)(increase(synthetic_url_lcp_ms_sum{env=\"$env\",run_id=\"$run_id\"}[$__interval]))/sum by (scenario)(increase(synthetic_url_lcp_ms_count{env=\"$env\",run_id=\"$run_id\"}[$__interval])))/1000",
          "legendFormat": "LCP {{scenario}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 29
      }
    },
    {
      "type": "timeseries",
      "title": "CLS Trend",
      "targets": [
        {
          "expr": "last_over_time(synthetic_url_cls{env=\"$env\",run_id=\"$run_id\"}[$__interval])",
          "legendFormat": "{{scenario}}"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 37
      }
    },
    {
      "type": "timeseries",
      "title": "SLO Burn (2s threshold)",
      "targets": [
        {
          "expr": "sum(increase(synthetic_url_duration_ms_bucket{env=\"$env\",run_id=\"$run_id\",le=\"2000\"}[$__range]))/sum(increase(synthetic_url_duration_ms_count{env=\"$env\",run_id=\"$run_id\"}[$__range]))"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 45
      }
    }
  ]
}