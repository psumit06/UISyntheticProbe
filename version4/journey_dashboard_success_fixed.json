{
  "title": "Synthetic Journey Monitoring - Histogram Edition (SUCCESS/FAIL FIXED)",
  "timezone": "browser",
  "schemaVersion": 38,
  "refresh": "10s",
  "templating": {
    "list": [
      {
        "name": "env",
        "type": "query",
        "datasource": "Prometheus",
        "query": "label_values(synthetic_step_duration_ms_bucket, env)"
      },
      {
        "name": "run_id",
        "type": "query",
        "datasource": "Prometheus",
        "query": "label_values(synthetic_step_duration_ms_bucket, run_id)"
      }
    ]
  },
  "panels": [
    {
      "type": "stat",
      "title": "Overall Step P90 (Full Run)",
      "targets": [
        {
          "expr": "max(histogram_quantile(0.9,sum by (le)(increase(synthetic_step_duration_ms_bucket{env=\"$env\",run_id=\"$run_id\"}[$__range])))/1000)"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      },
      "gridPos": {
        "h": 5,
        "w": 6,
        "x": 0,
        "y": 0
      }
    },
    {
      "type": "stat",
      "title": "Overall Step AVG (Full Run)",
      "targets": [
        {
          "expr": "(sum(increase(synthetic_step_duration_ms_sum{env=\"$env\",run_id=\"$run_id\"}[$__range]))/sum(increase(synthetic_step_duration_ms_count{env=\"$env\",run_id=\"$run_id\"}[$__range])))/1000"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      },
      "gridPos": {
        "h": 5,
        "w": 6,
        "x": 6,
        "y": 0
      }
    },
    {
      "type": "stat",
      "title": "Total Step Success",
      "targets": [
        {
          "expr": "sum(increase(synthetic_step_duration_ms_count{env=\"$env\",run_id=\"$run_id\"}[$__range]))"
        }
      ],
      "gridPos": {
        "h": 5,
        "w": 6,
        "x": 12,
        "y": 0
      }
    },
    {
      "type": "stat",
      "title": "Total Step Failure",
      "targets": [
        {
          "expr": "sum(increase(synthetic_step_failure_total{env=\"$env\",run_id=\"$run_id\"}[$__range]))"
        }
      ],
      "gridPos": {
        "h": 5,
        "w": 6,
        "x": 18,
        "y": 0
      }
    },
    {
      "type": "timeseries",
      "title": "Step Mean Trend",
      "targets": [
        {
          "expr": "(sum by (journey,step)(rate(synthetic_step_duration_ms_sum{env=\"$env\",run_id=\"$run_id\"}[5m]))/sum by (journey,step)(rate(synthetic_step_duration_ms_count{env=\"$env\",run_id=\"$run_id\"}[5m])))/1000",
          "legendFormat": "{{journey}} {{step}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 5
      }
    },
    {
      "type": "timeseries",
      "title": "Step P90 Trend",
      "targets": [
        {
          "expr": "histogram_quantile(0.9,sum by (le,journey,step)(rate(synthetic_step_duration_ms_bucket{env=\"$env\",run_id=\"$run_id\"}[5m])))/1000",
          "legendFormat": "{{journey}} {{step}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 13
      }
    },
    {
      "type": "timeseries",
      "title": "Step FCP & LCP",
      "targets": [
        {
          "expr": "(sum by (step)(rate(synthetic_step_fcp_ms_sum{env=\"$env\",run_id=\"$run_id\"}[5m]))/sum by (step)(rate(synthetic_step_fcp_ms_count{env=\"$env\",run_id=\"$run_id\"}[5m])))/1000",
          "legendFormat": "FCP {{step}}"
        },
        {
          "expr": "(sum by (step)(rate(synthetic_step_lcp_ms_sum{env=\"$env\",run_id=\"$run_id\"}[5m]))/sum by (step)(rate(synthetic_step_lcp_ms_count{env=\"$env\",run_id=\"$run_id\"}[5m])))/1000",
          "legendFormat": "LCP {{step}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 21
      }
    },
    {
      "type": "timeseries",
      "title": "Step CLS",
      "targets": [
        {
          "expr": "synthetic_step_cls{env=\"$env\",run_id=\"$run_id\"}",
          "legendFormat": "{{step}}"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 29
      }
    },
    {
      "type": "timeseries",
      "title": "Journey SLO Burn",
      "targets": [
        {
          "expr": "sum(increase(synthetic_step_duration_ms_bucket{env=\"$env\",run_id=\"$run_id\",le=\"3000\"}[$__range]))/sum(increase(synthetic_step_duration_ms_count{env=\"$env\",run_id=\"$run_id\"}[$__range]))"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 37
      }
    }
  ]
}